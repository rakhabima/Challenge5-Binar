<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suit Game</title>
    <link rel="stylesheet" href="./css/suit.css">
</head>
<body>
    <!-- start header -->
    <div class="header">
        <a href="/" class="back-bt"><</a>
        <img src="assets/logo 1.png" alt="" class="logo">
        <h1 class="header-text">ROCK PAPER SCISSORS</h1>
    </div>
    <!-- end header -->
    <!-- start content -->
    <div class="content">
        <div class="player">
            <h1 class="content-text">PLAYER 1</h1>
            <img src="assets/batu.png" alt="" class="batu playerOption" id="batuPlayer">
            <img src="assets/kertas.png" alt="" class="kertas playerOption" id="kertasPlayer">
            <img src="assets/gunting.png" alt="" class="gunting playerOption" id="guntingPlayer">
        </div>
        <div id="result">
            <h1 class="text" id="text">VS</h1>
        </div>
        <div class="com">
            <h1 class="content-text">COM</h1>
            <img src="assets/batu.png" alt="" class="batu" id="batuCom">
            <img src="assets/kertas.png" alt="" class="kertas" id="kertasCom">
            <img src="assets/gunting.png" alt="" class="gunting" id="guntingCom">
        </div>
    </div>
    <div id="refresh">
        <a href="#"><img src="assets/refresh.png" alt="" class="bt"></a>
    </div>
    <!-- end content -->
    <script src="./js/suitbaru.js"></script>
</body>
</html>